        {
            "name": "Launch Angular firefox",
            "type": "firefox",
            "version": "dev",
            "request": "launch",
            "preLaunchTask": "npm: start",            
            "url": "http://localhost:4200/",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Launch Angular edge",
            "type": "edge",
            "version": "dev",
            "request": "launch",
